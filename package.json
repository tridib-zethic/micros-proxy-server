{
  "name": "saba-micros-proxy",
  "productName": "SABA MICROS Proxy",
  "version": "1.0.0",
  "description": "SABA Micros Proxy Middleman",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "SABA Hospitality",
    "email": "info@sabahospitality.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/assets/avatar.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "saba_proxy_app",
            "loadingGif": "./src/assets/loader.gif",
            "setupIcon": "./src/assets/avatar.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-wix",
          "config": {
            "ui": {
              "chooseDirectory": true,
              "images": {
                "background": "./src/assets/saba-background.png",
                "banner": "./src/assets/saba-banner.png"
              }
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "@deepstream/client": "^5.2.4",
    "auto-launch": "^5.0.5",
    "axios": "^0.21.4",
    "electron-log": "^4.4.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-unhandled": "^3.0.2",
    "keytar": "^7.7.0",
    "path": "^0.12.7",
    "psl": "^1.8.0",
    "pusher-js": "^7.0.3",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.60",
    "@electron-forge/maker-deb": "^6.0.0-beta.60",
    "@electron-forge/maker-rpm": "^6.0.0-beta.60",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.60",
    "@electron-forge/maker-wix": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.60",
    "electron": "14.0.0",
    "electron-builder": "^22.11.7"
  }
}
